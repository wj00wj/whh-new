/* pages/addperson/add.wxss */

.inputcell{
  border-bottom: 1px solid #ccc;
  width: 650rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
}

.inputcell view{
  width: 150rpx;
  display: block;
}
.inputcell input{
  display: block;
  width: 520rpx;
  height: 78rpx;
}
.radio{
  padding-right: 60rpx;
}
.bigbox{
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  border: 1rpx solid #f8f8f8;
  width: 650rpx;
}
.names{
  font-size: 28rpx;
  color: #555;
  height: 60rpx;
  line-height: 60rpx;
}
.ups{
  font-size: 30rpx;
  color: #999
}

.footer{
  height: 110rpx;
  width: 100%;
  border-top: 1rpx solid #ccc;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 9;
}

.btns{
  width: 350rpx;
  height: 86rpx;
  color: #fff;
  border-radius: 10rpx;
  margin: 11rpx 12rpx;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btna{
  background: #db9019;
}
.btnb{
  background: #409EFF;
}
.btn{
  width: 700rpx;
  height: 86rpx;
  color: #fff;
  border-radius: 10rpx;
  margin: 10rpx 12rpx;
  font-size: 30rpx;
  line-height: 86rpx;
}